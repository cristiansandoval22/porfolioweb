      position: relative;
      height: 100%;
    }

    .cards__slider {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto;
    }

    .swiper {
      width: 300px;
      height: 200px;
      
    }

    .swiper-slide {
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 18px;
      font-size: 22px;
      font-weight: bold;
      color: #fff;
      border: 1px solid white;
    }
    .swiper-slide img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 18px;
