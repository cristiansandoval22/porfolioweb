<!-- Initialize Swiper -->
<script>
    import Swiper from 'swiper';
  import { EffectCards } from 'swiper/modules';

  const swiper = new Swiper(".mySwiper", {
    modules: [EffectCards],
    effect: "cards",
    grabCursor: true,
    loop: true,
   
  });
